fi

if [[ -n "${SPEC_PATH:-}" ]]; then
    echo "ðŸ“Š SPEC_PATH: $SPEC_PATH"
else
    echo "ðŸ’¡ SPEC_PATH not set (CLI will require --spec-root argument)"
fi

# SPEC environment setup requires manual sourcing from SPEC directory
if [[ -n "${SPEC_PATH:-}" ]] || [[ -n "${TEST_SPEC_PATH:-}" ]]; then
    echo "ðŸ’¡ To set up SPEC environment: cd \$SPEC_PATH && source shrc && cd -"
fi
